# ┌────────────────────┐
# │    mode bindings   │
# └────────────────────┘
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

set $exit Exit: [l]ogout [r]eboot [s]hutdown s[u]spend 
bindsym $mod+Escape mode "$exit"
mode "$exit" {
  bindsym l exit --no-startup-id 
  bindsym r exec --no-startup-id reboot
  bindsym s exec --no-startup-id shutdown now
  bindsym u exec --no-startup-id systemctl suspend; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+Escape mode "default"
}

set $volume_control Volume: [m]ute [d]own [u]p [c]ontrol
bindsym $mod+p mode "$volume_control"
mode "$volume_control" {
  bindsym m exec amixer -D pulse -q set Master toggle
  bindsym d exec amixer -q set Master 5%-
  bindsym u exec amixer -q set Master 5%+
  bindsym c exec pavucontrol; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+p mode "default"
}

set $app Launch: [y]outube [f]acebook [v]iber [z]alo [t]eams [o]ffice
bindsym $mod+i mode "$specific_app"
mode "$specific_app" {
  bindsym y workspace number $ws2; exec firefox --new-window youtube.com; mode "default"
  bindsym f workspace number $ws3; exec firefox --new-window facebook.com; mode "default"
  bindsym v exec viber.AppImage; mode "default"
  bindsym z exec firefox --new-window chat.zalo.me; mode "default"
  bindsym t exec teams; mode "default"
  bindsym o exec libreoffice; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+i mode "default"
}

set $launcher Launch: [w]eb [m]ail [n]ote [f]ile [p]df
bindsym $mod+o mode "$generic_app"
mode "$generic_app" {
  bindsym w exec firefox; mode "default"
  bindsym m exec thunderbird; mode "default"
  bindsym n exec xpad -t || xpad -s -N; mode "default"
  bindsym f exec kitty sh -c "fish -c nnn"; mode "default"
  bindsym p exec zathura; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+o mode "default"
}


